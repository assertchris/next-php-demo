{
    "private": true,
    "name": "@nextphp/framework",
    "description": "Lightweight framework for PHP app development.",
    "devDependencies": {
        "@prettier/plugin-php": "^0.16.0",
        "linguist-languages": "^7.12.1",
        "map-age-cleaner": "^0.1.3",
        "mem": "^8.0.0",
        "mimic-fn": "^3.1.0",
        "p-defer": "^1.0.0",
        "php-parser": "^3.0.2",
        "prettier": "^2.2.0"
    },
    "scripts": {
        "format:php": "prettier --write --parser=php"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "proseWrap": "never"
    },
    "license": "MIT"
}
